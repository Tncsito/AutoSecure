<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSecure.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Registro" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry Placeholder="Correo Electrónico" Keyboard="Email" />
        <Entry Placeholder="Contraseña" IsPassword="True" />
        <Entry Placeholder="Confirmar Contraseña" IsPassword="True" />

        <Button Text="Registrarse" BackgroundColor="Green" TextColor="White" />

        <Button Text="Ya tengo una cuenta" BackgroundColor="Transparent" TextColor="Green" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>