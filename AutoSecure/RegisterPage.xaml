<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSecure.RegisterPage"
             Title="RegisterPage"         
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background >
        <LinearGradientBrush>
            <GradientStop Color="Black" Offset="0.0"/>
            <GradientStop Color="Green" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Registro" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Beige"/>
        
        <Frame CornerRadius="10" BackgroundColor="#E0E0E0" Padding="10" Opacity="0.5">
            <Entry Placeholder="Correo Electrónico" Keyboard="Email" PlaceholderColor="DimGray"/>
        </Frame>
        <Frame CornerRadius="10" BackgroundColor="#E0E0E0" Padding="10" Opacity="0.5">
            <Entry Placeholder="Contraseña" IsPassword="True" PlaceholderColor="DimGray"/>
        </Frame>
        <Frame CornerRadius="10" BackgroundColor="#E0E0E0" Padding="10" Opacity="0.5">
            <Entry Placeholder="Confirmar Contraseña" IsPassword="True" PlaceholderColor="DimGray"/>
        </Frame>

        <Button Text="Registrarse" BackgroundColor="Green" TextColor="White" />

        <Button Text="Ya tengo una cuenta" BackgroundColor="Transparent" TextColor="Green" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>